<UserControl x:Class="Library_Application.Views.Authors"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library_Application.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1500"
             Background="#FAFBFC">

    <UserControl.Resources>
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#CBD5E0" Opacity="0.15" ShadowDepth="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernInput" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3182CE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernCombo" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <ContentPresenter Margin="{TemplateBinding Padding}"
                                                Content="{TemplateBinding SelectionBoxItem}"
                                                VerticalAlignment="Center"/>
                                <ToggleButton Name="ToggleButton" 
                                            Background="Transparent" 
                                            BorderThickness="0"
                                            HorizontalAlignment="Right"
                                            Width="20"
                                            IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                            ClickMode="Press">
                                    <Path Data="M7 10l5 5 5-5z" Fill="#6B7280" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </ToggleButton>
                                <Popup Name="Popup" 
                                     IsOpen="{TemplateBinding IsDropDownOpen}"
                                     AllowsTransparency="True" 
                                     Focusable="False"
                                     PopupAnimation="Slide">
                                    <Border Background="White" 
                                          BorderBrush="#D1D5DB" 
                                          BorderThickness="1" 
                                          CornerRadius="8"
                                          MinWidth="{TemplateBinding ActualWidth}">
                                        <ScrollViewer>
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3182CE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Enhanced Sidebar -->
        <Grid Grid.Column="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0F172A" Offset="0"/>
                    <GradientStop Color="#1E293B" Offset="0.5"/>
                    <GradientStop Color="#334155" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Border Background="Transparent" BorderBrush="#475569" BorderThickness="0,0,1,0">
                <Grid>
                    <ItemsControl Style="{StaticResource SideMenu}" 
                                ItemsSource="{Binding SideBarItems}" 
                                Margin="10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <MenuItem Header="{Binding}" 
                                        Style="{StaticResource SideMenuItem}"
                                        Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.SideBarItemsCommand}"
                                        CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button VerticalAlignment="Bottom" 
                          Margin="15,0,15,25"
                          FontSize="14" 
                          FontWeight="Bold"
                          Command="{Binding LogoutCommand}"
                          Style="{StaticResource LogoutButton}"
                          Content="LOG OUT"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Rectangle>
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FAFBFC" Offset="0"/>
                        <GradientStop Color="#F4F6F8" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

            <Grid Margin="40,35,35,35">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header Section -->
                <Grid Grid.Row="0" Margin="0,0,0,30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Authors Library"
                             FontSize="42" FontWeight="Light" 
                             Foreground="#1A202C" Margin="0,0,0,12">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#CBD5E0" Opacity="0.3" ShadowDepth="1" BlurRadius="2"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <Rectangle Grid.Row="1" Height="4" Width="140" 
                             HorizontalAlignment="Left" RadiusX="2" RadiusY="2">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#3182CE" Offset="0"/>
                                <GradientStop Color="#63B3ED" Offset="0.5"/>
                                <GradientStop Color="#90CDF4" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                </Grid>

                <!-- Filter Controls -->
                <Border Grid.Row="1" Style="{StaticResource ModernCard}" Padding="25" Margin="0,0,0,25">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="Search by Name" FontSize="14" FontWeight="Medium" 
                                     Foreground="#374151" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource ModernInput}" Width="Auto"
                                   Text="{Binding FilterAuthor, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0">
                            <TextBlock Text="Order By" FontSize="14" FontWeight="Medium" 
                                     Foreground="#374151" Margin="0,0,0,8"/>
                            <ComboBox Style="{StaticResource ModernCombo}"
                                    ItemsSource="{Binding OrderOptions}"
                                    SelectedItem="{Binding OrderAuthorBy, Mode=TwoWay}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="10,0,0,0">
                            <TextBlock Text="Sort Order" FontSize="14" FontWeight="Medium" 
                                     Foreground="#374151" Margin="0,0,0,8"/>
                            <ComboBox Style="{StaticResource ModernCombo}"
                                    ItemsSource="{Binding OrderAscDesc}"
                                    SelectedItem="{Binding AscOrDescOrder, Mode=TwoWay}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Authors List -->
                <Border Grid.Row="2" Style="{StaticResource ModernCard}" Padding="0">
                    <ListView ItemsSource="{Binding AuthorCollectionView}"
                            Background="Transparent" Foreground="#1A202C"
                            FontSize="14" BorderThickness="0">
                        <ListView.View>
                            <GridView>
                                <GridView.ColumnHeaderContainerStyle>
                                    <Style TargetType="GridViewColumnHeader">
                                        <Setter Property="Background" Value="#F8FAFC"/>
                                        <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="Padding" Value="20,15"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="Foreground" Value="#374151"/>
                                    </Style>
                                </GridView.ColumnHeaderContainerStyle>
                                <GridViewColumn Width="200" Header="First Name" DisplayMemberBinding="{Binding FirstName}"/>
                                <GridViewColumn Width="200" Header="Last Name" DisplayMemberBinding="{Binding LastName}"/>
                                <GridViewColumn Width="150" Header="Birth Date" DisplayMemberBinding="{Binding BirthDate}"/>
                                <GridViewColumn Width="150" Header="Books Count" DisplayMemberBinding="{Binding NumberOfBooks}"/>
                            </GridView>
                        </ListView.View>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="20,12"/>
                                <Setter Property="BorderBrush" Value="#F3F4F6"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F8FAFC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>